@model CreateGameViewModel
@{
    ViewData["Title"] = "Create Game";
}

<h5>Create New Game</h5>
<form asp-controller="Games" asp-action="Create" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type = "text" asp-for="Name" class="form-control" placeholder="Game Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="form-label mt-4"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="@Model.Categories" >
                    <option></option>
                </select>
                <span asp-validation-for="Categories" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select class="form-select" asp-for="SelectedDevices" asp-items="@Model.Devices">
                    <option></option>
                </select>
                <span asp-validation-for="SelectedDevices" class="text-danger"></span>

            </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label mb-1 mt-4">Description</label>
                    <textarea asp-for="Description" class="form-control mb-4"  rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
            <div class="form-group">
                <input type="file" asp-for="Cover" id="Cover" class="form-control" />
                <small  class="form-text text-muted">only .jpg,.jpeg,.png Images are allowed size 1MB</small>
                <span asp-validation-for="Cover" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Create</button>
        </div>
        <div class="col-md-6">
            <img alt="Cover" src="" class="cover-preview d-none justify-content-center overflow-hidden" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/game-form.js" asp-append-version="true"></script>
}
